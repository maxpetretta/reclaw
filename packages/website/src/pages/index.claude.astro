---
import Layout from "@/layouts/Layout.astro"

/* Geological strata ‚Äî wavy bands representing layers of buried chat history */
const strata = [
  { d: "M0,90 C200,70 400,110 600,90 S1000,70 1200,90", opacity: 0.06, delay: 0 },
  { d: "M0,190 C300,210 500,170 700,190 S1000,210 1200,190", opacity: 0.08, delay: 0.5 },
  { d: "M0,300 C250,280 450,320 650,300 S950,280 1200,300", opacity: 0.10, delay: 1.0 },
  { d: "M0,400 C200,420 500,380 700,400 S1000,420 1200,400", opacity: 0.07, delay: 1.5 },
  { d: "M0,500 C300,480 600,520 800,500 S1100,480 1200,500", opacity: 0.05, delay: 2.0 },
]

/* Buried memory artifacts ‚Äî glowing amber points embedded in strata */
const artifacts = [
  { cx: 150, cy: 105, r: 3, delay: 0.2 },
  { cx: 420, cy: 185, r: 4, delay: 1.5 },
  { cx: 680, cy: 295, r: 3.5, delay: 0.8 },
  { cx: 950, cy: 390, r: 3, delay: 2.2 },
  { cx: 280, cy: 310, r: 4.5, delay: 1.0 },
  { cx: 810, cy: 195, r: 3, delay: 0.5 },
  { cx: 1060, cy: 505, r: 3.5, delay: 1.8 },
  { cx: 530, cy: 410, r: 3, delay: 2.5 },
  { cx: 100, cy: 490, r: 4, delay: 0.3 },
  { cx: 1150, cy: 285, r: 3, delay: 1.3 },
]
---

<Layout>
  <header class="sticky top-0 z-50 backdrop-blur-xl bg-background/80 border-b border-border">
    <div class="max-w-5xl mx-auto px-5 h-14 flex items-center justify-between">
      <a href="#top" class="flex items-center gap-2 text-foreground font-semibold text-sm">
        <span>ü¶û</span>
        <span>Reclaw</span>
      </a>
      <nav class="hidden md:flex items-center gap-8 text-sm text-muted-foreground">
        <a href="#how" class="hover:text-foreground transition-colors">How it works</a>
        <a href="#providers" class="hover:text-foreground transition-colors">Providers</a>
        <a href="#start" class="hover:text-foreground transition-colors">Get started</a>
      </nav>
      <a
        href="https://github.com/maxpetretta/reclaw"
        class="text-sm font-medium text-muted-foreground hover:text-foreground transition-colors"
      >
        GitHub &rarr;
      </a>
    </div>
  </header>

  <!-- ‚îÄ‚îÄ‚îÄ‚îÄ HERO ‚îÄ‚îÄ‚îÄ‚îÄ -->
  <section class="hero-section relative overflow-hidden md:mx-5 lg:mx-auto md:max-w-5xl md:mt-6 md:rounded-2xl md:border md:border-border reveal">
    <!-- Animated geological strata -->
    <div class="hero-strata" aria-hidden="true">
      <svg viewBox="0 0 1200 620" preserveAspectRatio="xMidYMid slice" role="presentation" focusable="false">
        <defs>
          <radialGradient id="artifact-glow" cx="50%" cy="50%" r="50%">
            <stop offset="0%" stop-color="#D97706" stop-opacity="0.9" />
            <stop offset="100%" stop-color="#D97706" stop-opacity="0" />
          </radialGradient>
          <linearGradient id="scan-grad" x1="0" y1="0" x2="0" y2="1">
            <stop offset="0%" stop-color="#D97706" stop-opacity="0" />
            <stop offset="40%" stop-color="#D97706" stop-opacity="0.4" />
            <stop offset="50%" stop-color="#D97706" stop-opacity="0.7" />
            <stop offset="60%" stop-color="#D97706" stop-opacity="0.4" />
            <stop offset="100%" stop-color="#D97706" stop-opacity="0" />
          </linearGradient>
          <filter id="strata-glow">
            <feGaussianBlur stdDeviation="1.2" />
          </filter>
        </defs>

        <!-- Strata layers -->
        <g class="strata-lines">
          {strata.map((s) => (
            <path
              d={s.d}
              fill="none"
              stroke="#D97706"
              stroke-width="1.5"
              stroke-opacity={s.opacity}
              style={`--strata-d: ${s.delay}s`}
              class="stratum"
            />
          ))}
        </g>

        <!-- Sediment fills between strata -->
        <g class="strata-fills">
          <path d="M0,90 C200,70 400,110 600,90 S1000,70 1200,90 L1200,190 C1000,210 700,190 500,170 300,210 0,190 Z" fill="#D97706" opacity="0.015" />
          <path d="M0,190 C300,210 500,170 700,190 S1000,210 1200,190 L1200,300 C950,280 650,300 450,320 250,280 0,300 Z" fill="#92400E" opacity="0.025" />
          <path d="M0,300 C250,280 450,320 650,300 S950,280 1200,300 L1200,400 C1000,420 700,400 500,380 200,420 0,400 Z" fill="#78350F" opacity="0.03" />
          <path d="M0,400 C200,420 500,380 700,400 S1000,420 1200,400 L1200,500 C1100,480 800,500 600,520 300,480 0,500 Z" fill="#451A03" opacity="0.035" />
          <path d="M0,500 C300,480 600,520 800,500 S1100,480 1200,500 L1200,620 L0,620 Z" fill="#1C0A00" opacity="0.04" />
        </g>

        <!-- Buried memory artifacts -->
        <g class="buried-artifacts">
          {artifacts.map((a) => (
            <>
              <circle
                cx={a.cx} cy={a.cy} r={a.r * 5}
                fill="url(#artifact-glow)"
                style={`--art-d: ${a.delay}s`}
                class="artifact-halo"
              />
              <circle
                cx={a.cx} cy={a.cy} r={a.r}
                fill="#D97706"
                style={`--art-d: ${a.delay}s`}
                class="artifact-dot"
              />
            </>
          ))}
        </g>

        <!-- Scanning beam -->
        <rect class="scan-beam" x="0" y="0" width="1200" height="60" fill="url(#scan-grad)" />
      </svg>
    </div>

    <!-- Archaeological grid overlay -->
    <div class="hero-grid" aria-hidden="true"></div>

    <!-- Hero content -->
    <div class="relative z-10 px-6 pt-24 pb-16 md:px-10 md:pt-48 md:pb-24">
      <p class="font-mono text-[8px] sm:text-xs tracking-[0.2em] uppercase text-amber-500 mb-5 inline-flex items-center gap-2 rounded-full border border-amber-500/40 bg-amber-500/10 px-3.5 py-1.5 backdrop-blur-sm">
        <span aria-hidden="true">ü¶û</span>
        Extract memories from AI chat history
      </p>

      <h1 class="hero-heading font-extrabold tracking-tighter leading-none text-foreground">
        <span class="whitespace-nowrap">Your best ideas</span><br />
        <span class="whitespace-nowrap">are buried in</span><br />
        <span class="hero-accent whitespace-nowrap">old conversations.</span>
      </h1>

      <p class="mt-8 text-lg md:text-xl text-[#C8CDDF] max-w-xl leading-relaxed">
        Reclaw excavates durable memories from your ChatGPT, Claude, and Grok exports &mdash; so nothing worth remembering stays trapped in a chat log.
      </p>

      <div class="mt-10 flex flex-wrap gap-3">
        <a
          href="https://github.com/maxpetretta/reclaw"
          class="inline-flex items-center px-5 py-2.5 bg-amber-600 text-white font-semibold text-sm rounded-lg hover:brightness-110 transition-all hover:-translate-y-0.5 active:translate-y-0 shadow-lg shadow-amber-600/30"
        >
          View on GitHub
        </a>
        <a
          href="#start"
          class="inline-flex items-center px-5 py-2.5 border border-border text-foreground font-semibold text-sm rounded-lg hover:bg-card transition-all hover:-translate-y-0.5 active:translate-y-0 backdrop-blur-sm"
        >
          Get started
        </a>
      </div>
    </div>

    <!-- Margin annotation -->
    <aside class="hero-marginalia" aria-hidden="true">
      <span class="font-mono text-xs text-amber-400 tracking-wide">cf. Digital archaeology</span>
      <span class="text-sm italic text-muted-foreground leading-relaxed border-l-2 border-amber-500/30 pl-2.5">"The best time to save a memory was yesterday"</span>
    </aside>
  </section>

  <main id="top" class="max-w-5xl mx-auto px-5">
    <!-- ‚îÄ‚îÄ‚îÄ‚îÄ HOW IT WORKS ‚îÄ‚îÄ‚îÄ‚îÄ -->
    <section class="py-20" id="how">
      <p class="font-mono text-xs tracking-[0.2em] uppercase text-amber-500 mb-4 reveal">
        How it works
      </p>
      <h2 class="text-2xl md:text-3xl font-bold tracking-tight text-foreground mb-4 reveal">
        Three steps to recovered memory
      </h2>
      <p class="text-muted-foreground leading-relaxed max-w-2xl mb-4 reveal">
        Reclaw reads your AI provider exports, runs batched summarization over hundreds of conversations, and writes the results directly into your memory system &mdash; OpenClaw workspace or Zettelclaw vault.
      </p>
      <div class="flex flex-wrap items-center gap-2 text-sm text-muted-foreground mb-12 reveal">
        <span>export data</span>
        <span class="text-amber-500 font-bold">&rarr;</span>
        <span>run reclaw</span>
        <span class="text-amber-500 font-bold">&rarr;</span>
        <span>durable memory</span>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <article class="reveal">
          <div class="flex items-baseline gap-3 mb-3">
            <span class="font-mono text-xs text-muted-foreground/40 select-none">01</span>
            <span class="text-xl">üì¶</span>
          </div>
          <h3 class="font-bold text-foreground mb-1.5">Export</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Download your data from ChatGPT, Claude, or Grok. Each provider puts a <code class="font-mono text-xs bg-amber-500/15 text-amber-400 px-1.5 py-0.5 rounded">conversations.json</code> in the archive.
          </p>
          <span class="font-mono text-xs text-amber-400 mt-3 inline-block">Settings &rarr; Data Export</span>
        </article>
        <article class="reveal">
          <div class="flex items-baseline gap-3 mb-3">
            <span class="font-mono text-xs text-muted-foreground/40 select-none">02</span>
            <span class="text-xl">‚õèÔ∏è</span>
          </div>
