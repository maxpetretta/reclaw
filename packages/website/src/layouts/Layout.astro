---
import "@fontsource-variable/inter/standard.css"
import "@fontsource-variable/inter/standard-italic.css"
import "@/styles/global.css"

interface Props {
  title?: string
  description?: string
}

const {
  title = "reclaw | Extract durable memory from AI chat history",
  description = "Reclaw extracts and summarizes conversations from ChatGPT, Claude, and Grok exports into durable memory artifacts.",
} = Astro.props
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0b0f14" />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site ?? "https://reclaw.sh")} />
  </head>
  <body class="bg-background text-foreground antialiased">
    <slot />
  </body>
</html>
