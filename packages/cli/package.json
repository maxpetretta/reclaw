{
  "name": "reclaw",
  "version": "0.1.0",
  "description": "CLI for extracting core memories from AI chat exports",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxpetretta/reclaw.git"
  },
  "homepage": "https://github.com/maxpetretta/reclaw#readme",
  "bugs": {
    "url": "https://github.com/maxpetretta/reclaw/issues"
  },
  "keywords": [
    "ai",
    "cli",
    "chatgpt",
    "claude",
    "grok",
    "openclaw",
    "memory",
    "summarization"
  ],
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "bin": {
    "reclaw": "bin/reclaw.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "status": "bun run src/index.ts status",
    "smoke": "../../scripts/run-local-smoke-tests.sh",
    "build": "rm -rf dist && bun build --target node --outfile dist/index.js src/index.ts && mkdir -p dist/prompts && if [ -d prompts ]; then cp prompts/*.md dist/prompts/ 2>/dev/null || true; fi",
    "prepack": "bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check . && tsgo --noEmit",
    "lint:biome": "biome check .",
    "lint:typecheck": "tsgo --noEmit",
    "fix": "biome check --write ."
  },
  "dependencies": {
    "@clack/prompts": "1.0.1"
  },
  "devDependencies": {
    "@types/bun": "1.2.5",
    "@types/node": "25.3.0"
  }
}
