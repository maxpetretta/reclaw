{
  "name": "reclaw-workspace",
  "private": true,
  "workspaces": ["packages/cli", "packages/skill", "packages/website"],
  "scripts": {
    "clone": "./scripts/clone-openclaw-workspace.sh",
    "dev": "bun run --cwd packages/website dev",
    "start": "bun run dev",
    "build": "bun run build:cli && bun run build:website",
    "build:cli": "bun run --cwd packages/cli build",
    "build:website": "bun run --cwd packages/website build",
    "preview": "bun run --cwd packages/website preview",
    "website:dev": "bun run --cwd packages/website dev",
    "website:build": "bun run --cwd packages/website build",
    "website:preview": "bun run --cwd packages/website preview",
    "cli": "bun run --cwd packages/cli dev",
    "cli:build": "bun run --cwd packages/cli build",
    "cli:help": "bun run --cwd packages/cli dev -- --help",
    "test": "bun run --cwd packages/cli test",
    "lint": "bun run --cwd packages/cli lint && bun run --cwd packages/skill lint && bun run --cwd packages/website lint",
    "fix": "bun run --cwd packages/cli fix && bun run --cwd packages/skill fix && bun run --cwd packages/website fix"
  }
}
